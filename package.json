{
  "name": "ralphton-screenclone",
  "version": "0.1.0",
  "private": true,
  "description": "RalphTon ScreenClone app",
  "scripts": {
    "dev": "vite --config src/client/vite.config.ts",
    "server": "tsx watch src/server/index.ts",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run server\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --config src/client/vite.config.ts",
    "build:server": "tsc --project src/server/tsconfig.json",
    "typecheck": "tsc --project src/client/tsconfig.json --noEmit && tsc --project src/server/tsconfig.json --noEmit",
    "lint": "eslint .",
    "test": "echo \"No tests yet\"",
    "test:smoke": "npx playwright test tests/smoke/",
    "test:smoke:ui": "npx playwright test tests/smoke/ --ui"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^2.1.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "puppeteer-core": "^24.37.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.7.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.58.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.13.8",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^5.4.14"
  },
  "engines": {
    "node": ">=20"
  }
}
